{
  "mcpServers": {
    "slack": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
      },
      "description": "Slack 연동 - 채널 메시지, 알림, 스레드 관리"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub PR, Issue, Repository 관리"
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "세션 간 컨텍스트 저장 - 프로젝트 지식 유지"
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-fetch"],
      "description": "웹 페이지 조회 - 문서, API 레퍼런스 확인"
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-sqlite", "--db-path", "./data/claude_memory.db"],
      "description": "SQLite DB - 로컬 데이터 저장/조회"
    },
    "vector-search": {
      "command": "python",
      "args": ["-m", "src.mcp.servers.vector_search_server"],
      "transport": "stdio",
      "description": "Pinecone 기반 벡터/하이브리드 검색 서버"
    },
    "http-fetch": {
      "command": "python",
      "args": ["-m", "src.mcp.servers.http_fetch_server"],
      "transport": "stdio",
      "description": "웹 페이지 가져오기 및 검색 서버"
    }
  },
  "tools": {
    "vector_search": {
      "server": "vector-search",
      "description": "시맨틱 벡터 검색"
    },
    "keyword_search": {
      "server": "vector-search",
      "description": "키워드 기반 검색"
    },
    "hybrid_search": {
      "server": "vector-search",
      "description": "벡터+키워드 하이브리드 검색"
    },
    "find_similar_creators": {
      "server": "vector-search",
      "description": "유사 크리에이터 검색"
    },
    "fetch_url": {
      "server": "http-fetch",
      "description": "URL 콘텐츠 가져오기"
    },
    "web_search": {
      "server": "http-fetch",
      "description": "웹 검색 (Brave/SerpAPI)"
    },
    "fetch_creator_profile": {
      "server": "http-fetch",
      "description": "크리에이터 프로필 가져오기"
    }
  }
}
