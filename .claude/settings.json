{
  "permissions": {
    "allow": [
      "Bash(git status)",
      "Bash(git diff*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git checkout*)",
      "Bash(git push*)",
      "Bash(git pull*)",
      "Bash(python:*)",
      "Bash(pytest*)",
      "Bash(uv:*)",
      "Bash(pip:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(ruff*)",
      "Bash(mypy*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Read(src/**)",
      "Read(tests/**)",
      "Read(config/**)",
      "Read(docs/**)",
      "Read(frontend/**)",
      "Read(node/**)",
      "Read(.claude/**)",
      "Read(.github/**)",
      "Edit(src/**)",
      "Edit(tests/**)",
      "Edit(config/**)",
      "Edit(frontend/**)",
      "Edit(node/**)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/secrets/**)",
      "Read(**/*credential*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Edit(.env)",
      "Edit(.env.*)",
      "Bash(rm -rf*)",
      "Bash(curl*)",
      "Bash(wget*)"
    ],
    "ask": [
      "Bash(docker*)",
      "Edit(.claude/**)",
      "Edit(.github/**)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/notify_slack.sh"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/notify_slack.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/format_after_edit.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/security-check.sh"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/validate-json.sh"
          },
          {
            "type": "command",
            "command": "echo \"[$(date +%H:%M:%S)] Editing: $CLAUDE_FILE_PATH\" >> \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/edit.log 2>/dev/null || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date +%Y-%m-%d %H:%M:%S)] Session completed\" >> \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session.log 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/notify_slack.sh"
          }
        ]
      }
    ]
  },
  "env": {
    "PYTHONPATH": ".",
    "PYTHONDONTWRITEBYTECODE": "1",
    "CLAUDE_PROJECT_DIR": "."
  },
  "lsp": {
    "python": {
      "command": "/Users/jaehyun/Desktop/creator-onboarding-agent/.venv/bin/pyright-langserver",
      "args": ["--stdio"],
      "extensionToLanguage": {
        ".py": "python"
      },
      "env": {
        "PYTHONPATH": ".,src"
      },
      "settings": {
        "python.analysis.typeCheckingMode": "strict",
        "python.analysis.diagnosticMode": "workspace"
      },
      "startupTimeout": 10000,
      "restartOnCrash": true,
      "maxRestarts": 5
    }
  }
}
