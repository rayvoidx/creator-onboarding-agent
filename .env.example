# ============================================
# Creator Onboarding Agent - Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# cp .env.example .env

# ============================================
# Server Configuration
# ============================================
PORT=8000
HOST=0.0.0.0
DEBUG=false
LOG_LEVEL=info

# ============================================
# API Keys - LLM Providers
# ============================================
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=AIza...

# ============================================
# Vector Database - Pinecone
# ============================================
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=creator-onboarding

# ============================================
# Embeddings - Voyage AI
# ============================================
VOYAGE_API_KEY=

# ============================================
# Monitoring - Langfuse
# ============================================
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_HOST=https://cloud.langfuse.com

# ============================================
# Monitoring - Prometheus
# ============================================
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/creator_onboarding

# ============================================
# Redis (Cache & Queue)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# Slack Integration (Claude Code Automation)
# ============================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_TEAM_ID=T0123456789
SLACK_CHANNEL=#dev-notifications

# ============================================
# GitHub Integration (Claude Code Automation)
# ============================================
GITHUB_TOKEN=ghp_...
GITHUB_REPO=owner/repo

# ============================================
# Claude Code Automation
# ============================================
CLAUDE_AUTO_NOTIFY=true
CLAUDE_MAX_ITERATIONS=10
CLAUDE_BLOCK_TIMEOUT_MINUTES=30
