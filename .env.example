# ============================================================
# Creator Onboarding Agent - Environment Variables
# ============================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ============================================================

# -----------------------------------------------------------
# LLM API Keys (at least one required for core functionality)
# -----------------------------------------------------------
# Anthropic — used as the default LLM provider
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI — used for deep analysis and tool calling
OPENAI_API_KEY=sk-...

# Google Gemini — used as fast/fallback model
GOOGLE_API_KEY=...

# -----------------------------------------------------------
# Embedding & Vector Search
# -----------------------------------------------------------
# Voyage AI — primary embedding provider
VOYAGE_API_KEY=pa-...

# Pinecone — production vector database
PINECONE_API_KEY=...
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=creator-onboarding
PINECONE_NAMESPACE=default

# -----------------------------------------------------------
# MCP (Model Context Protocol) — optional
# -----------------------------------------------------------
# Supadata — Instagram/TikTok profile scraping via MCP
SUPADATA_API_KEY=...

# -----------------------------------------------------------
# Application
# -----------------------------------------------------------
SECRET_KEY=change-me-to-a-random-string
ENABLE_AUTH=false
ENABLE_RATE_LIMITING=true

# -----------------------------------------------------------
# Observability — optional
# -----------------------------------------------------------
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# -----------------------------------------------------------
# LLM Model Names (defaults are pre-configured, override only if needed)
# -----------------------------------------------------------
# DEFAULT_LLM_MODEL=claude-sonnet-4-5-20250929
# FAST_LLM_MODEL=gemini-2.5-flash
# DEEP_LLM_MODEL=gpt-5.2
# FALLBACK_LLM_MODEL=gemini-2.5-flash

# -----------------------------------------------------------
# Embedding Models (defaults are pre-configured)
# -----------------------------------------------------------
# EMBEDDING_MODEL_NAME=text-embedding-3-large
# DEFAULT_EMBEDDING_PROVIDER=voyage
# VOYAGE_EMBEDDING_MODEL_NAME=voyage-3

# -----------------------------------------------------------
# Infrastructure (auto-configured in Docker Compose)
# -----------------------------------------------------------
# DATABASE_URL=postgresql://postgres:password@localhost:5432/creator_onboarding_db
# REDIS_URL=redis://localhost:6379
